<h1>Edit Comment</h1>
<br>
<%= render('layouts/errors', :object => @comment) %>
<% if current_user %>
  <%= form_for @comment do |f| %>
    <div class = "field">
      <%= f.label "Comment:" %>
      <br>
      <%= f.text_area :text %>
    </div>
    <%= f.hidden_field :entry_id, :value => @comment.entry_id %>
    <%= f.submit "Submit Comment" %>
  <% end %>
<% end %>
